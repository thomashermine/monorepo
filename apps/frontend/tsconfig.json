{
    "extends": "../../tsconfig.base.json",
    "include": [
        "**/*",
        "**/.server/**/*",
        "**/.client/**/*",
        ".react-router/types/**/*"
    ],
    "compilerOptions": {
        "lib": ["DOM", "DOM.Iterable", "ES2023"],
        "types": ["node", "vite/client"],
        "jsx": "react-jsx",
        "rootDirs": [".", "./.react-router/types"],
        "baseUrl": ".",
        "paths": {
            "@/*": ["./app/*"],
            "@monorepo/helpers/*": ["../../packages/helpers/src/*"],
            "@monorepo/config/*": ["../../packages/config/src/*"]
        },
        "noEmit": true
    }
}
