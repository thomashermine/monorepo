    "type": "module",
    "scripts": {
        "build": "react-router build",
        "dev": "react-router dev",
        "d": "pnpm run dev",
        "start": "react-router-serve ./build/server/index.js",
        "type-check": "react-router typegen && tsc",
        "storybook": "storybook dev -p 6006",
        "format": "prettier --write \"app/**/*.ts\"",
        "format-fix": "prettier --write \"app/**/*.ts\" --fix",
        "lint": "eslint app --ext .ts,.js",
        "lint-fix": "pnpm lint --fix",
        "build-storybook": "storybook build",
        "test-storybook": "pnpm run --parallel test-storybook",
        "test-e2e": "playwright test",
        "test-e2e:ui": "playwright test --ui",
        "test-e2e:headed": "playwright test --headed",
        "test-e2e:open": "playwright show-report"
    },
    "dependencies": {
        "@monorepo/config": "workspace:*",
