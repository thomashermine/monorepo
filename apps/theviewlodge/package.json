        "i18next-browser-languagedetector": "^8.2.0",
        "i18next-fs-backend": "^2.6.0",
        "i18next-http-backend": "^3.0.2",
        "isbot": "^5.1.31",
        "react": "^19.1.1",
        "react-dom": "^19.1.1",
        "react-i18next": "^16.1.3",
        "react-router": "^7.9.2",
        "remix-i18next": "^7.4.2"
    },
    "devDependencies": {
        "@chromatic-com/storybook": "^4.1.1",
