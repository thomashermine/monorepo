        "@vitest/browser": "^3.2.4",
        "@vitest/coverage-v8": "^3.2.4",
        "dotenv": "^17.2.3",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "globals": "^16.4.0",
        "markdown-to-jsx": "^7.6.0",
        "playwright": "^1.56.0",
        "prettier": "^3.6.2",
        "storybook": "^9.1.10",
        "storybook-addon-remix-react-router": "^5.0.0",
        "tailwindcss": "^4.1.13",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.45.0",
        "vite": "^7.1.7",
        "vite-tsconfig-paths": "^5.1.4",
        "vitest": "^3.2.4"
